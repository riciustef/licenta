<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ștefan Rîciu</title>
    
    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />

        @* additional css *@
        <link href="~/css/template/owl.carousel.css" rel="stylesheet" />
        <link href="~/css/template/template.css" rel="stylesheet" />
        <link href="~/fonts/css/font-awesome.css" rel="stylesheet" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.5/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />

        @* additional css *@
        <link href="~/css/template/owl.carousel.min.css" rel="stylesheet" asp-append-version="true" />
        <link href="~/css/template/template.min.css" rel="stylesheet" asp-append-version="true" />
        <link href="~/fonts/css/font-awesome.min.css" rel="stylesheet" asp-append-version="true" />

    </environment>
    @Html.ApplicationInsightsJavaScript(TelemetryConfiguration)
</head>
<body>


    @* header *@
    <header>
        <div class="container">
            @await Html.PartialAsync("_Header")
        </div>
    </header>

    @* image slider *@
    @RenderSection("slider", required: false)


    @* breadcrumb *@
    @await Html.PartialAsync("_Breadcrumb")

    @* main content *@
    <div class="main_btm1">
        <div class="container">
            @RenderBody()
        </div>
    </div>

    @* slider parteneri *@
    <div class="main_btm">
        <div class="container">
            @await Html.PartialAsync("_Parteneri")
        </div>
    </div>

    @* footer *@
    <footer>
        @await Html.PartialAsync("_Footer")
    </footer>

    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>

        @* js pt slider parteneri *@
        <script src="~/js/template/owl.carousel.js"></script>
        <script src="~/js/template/menu.js" type="text/javascript"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.1.4.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.5/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>

        @* js pt slider parteneri *@
        <script src="~/js/template/owl.carousel.min.js" asp-append-version="true"></script>

    </environment>

    @* js pt meniu *@
    <script type="application/x-javascript">
        addEventListener("load", function() {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>

    @* config js pt slider parteneri *@
    <script>
        $(document).ready(function () {

            $("#owl-slider").owlCarousel({
                items: 4,
                lazyLoad: true,
                autoPlay: true,
                navigation: true,
                navigationText: ["", ""],
                rewindNav: false,
                scrollPerPage: false,
                pagination: false,
                paginationNumbers: false,
            });

        });
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
